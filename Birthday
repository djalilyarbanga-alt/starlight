  <script>
    const poemText = document.getElementById('poem').innerText.trim();
    const copyBtn = document.getElementById('copyBtn');
    const downloadBtn = document.getElementById('downloadBtn');
    const voiceBtn = document.getElementById('voiceBtn');
    const notice = document.getElementById('notice');

    copyBtn.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(poemText);
        copyBtn.textContent = '‚úÖ Copi√©';
        setTimeout(()=> copyBtn.textContent = 'üìã Copier le message', 2000);
      } catch(e){
        alert('Impossible de copier automatiquement. S√©lectionne le texte et copie manuellement.');
      }
    });

    downloadBtn.addEventListener('click', () => {
      const blob = new Blob([poemText], {type:'text/plain;charset=utf-8'});
      const a = document.createElement('a');
      a.href = URL.createObjectURL(blob);
      a.download = 'message_anniversaire.txt';
      document.body.appendChild(a);
      a.click();
      a.remove();
      setTimeout(()=> URL.revokeObjectURL(a.href), 2000);
    });

    voiceBtn.addEventListener('click', () => {
      if(!('speechSynthesis' in window)){
        notice.textContent = "La synth√®se vocale n'est pas support√©e par ce navigateur.";
        return;
      }
      const utter = new SpeechSynthesisUtterance(poemText);
      utter.lang = 'fr-FR';
      utter.rate = 0.95;
      utter.pitch = 1.02;
      window.speechSynthesis.cancel();
      window.speechSynthesis.speak(utter);
    });
  </script>
